@model List<Category>
<div class="table-responsive">
    @if (TempData["success"] != null)
    {
        <h1>  @TempData["success"] </h1>
    }
    <table class="table table-striped table-hover table-borderless table-primary align-middle" id="categoryTable">
        <thead class="table-light">
            <a asp-action="Create" asp-controller="Category" class="btn btn-light"> Create</a>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Description</th>
                <th>Edit Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row">@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description </td>
                    <td> <a type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-CategoryId="@item.CategoryId">DELETE</a> <a class="btn btn-primary" asp-action="Edit" asp-controller="Category" asp-route-CategoryId="@item.CategoryId">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>


<script>
    $('document').ready(function () {
        $('#categoryTable').DataTable();
    });
</script>