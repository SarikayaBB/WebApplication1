@if (TempData["success"] != null)
{
    <h1>  @TempData["success"] </h1>
}
<table class="table table-striped table-hover table-borderless align-middle" id="orderDetailsTable">


    <thead class="table-light">
        <tr>
            <th>Product ID</th>
            <th>Order ID</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Discount</th>
            <th>Extended Price</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#orderDetailsTable').DataTable({
            ajax: '@Url.Action("GetAllJson")',
            columns: [
                { data: 'productId' },
                { data: 'orderId' },
                { data: 'productName' },
                { data: 'unitPrice' },
                { data: 'quantity' },
                { data: 'discount' },
                { data: 'extendedPrice' }
            ],
            columnDefs: [{
                "data": 'orderId',
                "targets": [7],
                "render": function (data, type, full) {
                    return ' <button id="' + data + '" class="btn btn-danger" >Delete</button>';
                },
                /*  "data": 'orderId',
                "targets": [6],
                "render": function (data, type, full) {
                    return '<button class="btn btn-danger" id="' + data + '">Delete</button>'
                }*/
            }],
        });
    });
</script>